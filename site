<body>
    <div class="container">
        <h1>Teste de Velocidade</h1>
        <button onclick="startTest()">Iniciar Teste</button>
        <div class="result" id="ping">Ping: -- ms</div>
        <div class="result" id="download">Download: -- Mbps</div>
        <div class="result" id="upload">Upload: -- Mbps</div>
    </div>

    <script>
        let speedTest;
        
        function startTest() {
            if (!window.Speedtest) {
                alert("Erro ao carregar a biblioteca de teste de velocidade.");
                return;
            }
            
            speedTest = new Speedtest();
            speedTest.onupdate = function(data) {
                document.getElementById("ping").innerText = "Ping: " + (data.ping || "N/A") + " ms";
                document.getElementById("download").innerText = "Download: " + (data.download || "N/A") + " Mbps";
                document.getElementById("upload").innerText = "Upload: " + (data.upload || "N/A") + " Mbps";
            };
            speedTest.onend = function() {
                console.log("Teste conclu√≠do.");
            };
            speedTest.start();
        }
    </script>
</body>
</html>
